{% block body %}
<h1>Bonjour Bienvenue sur mon site !</h1>
<div>
<a href="{{path('app_login') }}">Connexion</a>
</div>
{% if app.user == false %}

<a href="{{path('app_register') }}">S'inscrire</a>
{% else %}

<div>
<a href="{{path('app_logout') }}">Déconnexion</a>
</div>

{# Le lien n'apparait que si on a le rôle Admin #}
{% endif %}
